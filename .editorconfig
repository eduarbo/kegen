root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.{js,jsx,json,ts,tsx,yml}]
indent_size = 2
indent_style = tab

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[package.json]
indent_style = space
indent_size = 2
