{
	"name": "kegen",
	"version": "0.0.0",
	"description": "Karabiner Elements json GENerator",
	"exports": "./src/main.js",
	"type": "module",
	"engines": {
		"node": ">= 16.13 <17"
	},
	"devDependencies": {
		"eslint": "^8.2.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-jest": "^25.2.4",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"jest": "~27.3.1",
		"prettier": "2.4.1",
		"rimraf": "~3.0.2"
	},
	"scripts": {
		"start": "node --experimental-specifier-resolution=node example/karabiner.js > build/karabiner.json",
		"clean": "rimraf coverage build/*",
		"lint": "eslint . --ext .js",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
		"test:watch": "jest --watch",
    "validate": "npm run lint && npm run test",
    "precommit": "npm lint",
    "prepush": "npm test"
	},
	"author": "Eduardo Ruiz <eduarbo@gmail.com>",
	"license": "Apache-2.0",
	"bin": {
		"kegen": "src/cli.js"
	}
